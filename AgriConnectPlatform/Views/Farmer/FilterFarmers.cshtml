@model List<AgriConnectPlatform.Models.Farmer>

@{
    ViewData["Title"] = "Filter Farmers";
}

<h2>Filter Farmers</h2>

<form method="get" asp-action="FilterFarmers" asp-controller="Employee">
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" />
    </div>

    <button type="submit">Filter</button>
</form>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Registration Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td>@farmer.FarmerID</td>
                <td>@farmer.FarmerName</td>
                <td>@farmer.FarmerEmail</td>
                <td>@farmer.RegistrationDate</td>
            </tr>
        }
    </tbody>
</table>
