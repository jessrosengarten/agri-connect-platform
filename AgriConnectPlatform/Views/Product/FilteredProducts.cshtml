@{
    ViewBag.Title = "Filtered Products";
    var productsTable = ViewBag.ProductsTable as System.Data.DataTable;
}

<h2>Filtered Products</h2>

@if (productsTable != null && productsTable.Rows.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Addition Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (System.Data.DataRow row in productsTable.Rows)
            {
                <tr>
                    <td>@row["ProductID"]</td>
                    <td>@row["ProductName"]</td>
                    <td>@row["Description"]</td>
                    <td>@row["Category"]</td>
                    <td>@row["AdditionDate"]</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products found for the selected category.</p>
}
