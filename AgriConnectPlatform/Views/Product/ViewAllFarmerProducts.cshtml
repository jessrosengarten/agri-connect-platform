@{
    ViewBag.Title = "View Products";
    var productsTable = ViewBag.ProductsTable as System.Data.DataTable;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Products</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);

        }

        h2 {
            margin-top: 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        .no-products {
            margin-top: 20px;
            font-style: italic;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>Products List</h2>

        <!-- Filter Form -->
        <form method="get" action="/Product/FilterProductsByCategory">
            <label for="category">Filter Products by Category:</label>
            <input type="text" id="category" name="category" required />
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>


        @if (productsTable != null && productsTable.Rows.Count > 0)
        {
            <table>
                <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Addition Date</th>
                        <th>Added By: </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (System.Data.DataRow row in productsTable.Rows)
                    {
                        <tr>
                            <td>@row["ProductID"]</td>
                            <td>@row["ProductName"]</td>
                            <td>@row["Description"]</td>
                            <td>@row["Category"]</td>
                            <td>@row["AdditionDate"]</td>
                            <td>@Farmer.GetFarmerById((int)row["FarmerID"]).FarmerName</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="no-products">No products found.</p>
        }
        <!-- Add button to return to EmployeeHome -->
        <div class="button-container">
            <button onclick="location.href='@Url.Action("EmployeeHome", "Employee")'" class="btn btn-primary">Return Home</button>
        </div>
    </div>

</body>
</html>
