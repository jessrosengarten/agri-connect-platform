@{
    ViewBag.Title = "View Products";
    var productsTable = ViewBag.ProductsTable as System.Data.DataTable;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Products</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        h2 {
            margin-top: 20px;
            text-align: center;
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .no-products {
            margin-top: 20px;
            font-style: italic;
            text-align: center;
            color: #888;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>Products List</h2>

        @if (productsTable != null && productsTable.Rows.Count > 0)
        {
            <table>
                <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Addition Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (System.Data.DataRow row in productsTable.Rows)
                    {
                        <tr>
                            <td>@row["ProductID"]</td>
                            <td>@row["ProductName"]</td>
                            <td>@row["Description"]</td>
                            <td>@row["Category"]</td>
                            <td>@row["AdditionDate"]</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="no-products">No products found.</p>
        }
        <!-- Add button to return to EmployeeHome -->
        <div class="button-container">
            <button onclick="location.href='@Url.Action("FarmerHome", "Farmer")'" class="btn btn-primary">Return Home</button>
        </div>

    </div>

</body>
</html>
